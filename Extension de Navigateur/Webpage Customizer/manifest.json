{
  "manifest_version": 3,
  "name": "Customizer Extension",
  "version": "1.0",
  "description": "Personnalisez vos pages web!",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
